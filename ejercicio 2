ejercicio 2
#include <iostream>
using namespace std;

int main(){
    int n;
    double v[100];

    cout << "Cantidad de elementos: ";
    cin >> n;

    for(int i=0; i<n; i++){
        cin >> v[i];
    }

    double menor = v[0];
    for(int i=1; i<n; i++){
        if(v[i] < menor)
            menor = v[i];
    }

    cout << "El valor minimo es: " << menor;
    return 0;
}
