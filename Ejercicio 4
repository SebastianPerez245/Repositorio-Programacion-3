Ejercicio 4
#include <iostream>
using namespace std;

int main(){
    int n;
    double v[100], r[100];

    cout << "Cantidad: ";
    cin >> n;

    for(int i=0; i<n; i++)
        cin >> v[i];

    for(int i=0; i<n; i++)
        r[i] = v[n-1-i];

    cout << "Vector invertido:\n";
    for(int i=0; i<n; i++)
        cout << r[i] << " ";

    return 0;
}
