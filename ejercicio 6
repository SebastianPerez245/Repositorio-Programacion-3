ejercicio 6
#include <iostream>
using namespace std;

int main(){
    int n;
    double v[100];

    cin >> n;

    for(int i=0; i<n; i++)
        cin >> v[i];

    for(int i=0; i<n-2; i++){
        double p = (v[i] + v[i+1] + v[i+2]) / 3;
        cout << "Promedio " << i+1 << ": " << p << endl;
    }

    return 0;
}
