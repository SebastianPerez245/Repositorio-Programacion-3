ejercicio 1
#include <iostream>
using namespace std;

int main(){
    int n;
    double v[100];

    cout << "Cantidad de elementos: ";
    cin >> n;

    for(int i=0; i<n; i++){
        cout << "Valor " << i+1 << ": ";
        cin >> v[i];
    }

    double mayor = v[0];
    for(int i=1; i<n; i++){
        if(v[i] > mayor)
            mayor = v[i];
    }

    cout << "El valor maximo es: " << mayor;
    return 0;
}
